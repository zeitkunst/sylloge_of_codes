<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="sylloge_of_codes" 
    metal:use-macro="base">
    <tal:block metal:fill-slot="content">
    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="content">
        <div class="container">
            <h1 i18n:translate="syllogeCurate">curate sylloge of codes</h1>
            <div class="row">
                <div class="col-md-offset-2 col-md-8 alert alert-success fade" id="flash_messages" tal:condition="request.session.peek_flash()">
                    <p class="flash_message" tal:repeat="message request.session.pop_flash()">${message}</p>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-offset-2 col-md-8">
                    <p i18n:translate="curateP1">Curate info</p>
                    <div class="col-md-2">
                        <h3>Enabled</h3>                        
                    </div>
                    <div class="col-md-10">
                        <h3>Code</h3>
                    </div>

                    <form action="/curate" method="POST">
                        <p tal:repeat="result results">
                            <div class="col-md-2">
                                <input type="checkbox" name="selectedCodes" value="${result.id}" checked="${result.enabled and 'checked' or None}"/>
                            </div>
                            <div class="col-md-10">
                                <p>Posted by ${result.pseudonym} on ${result.code_date}</p>
                                <p>Code: ${result.code}</p>
                            </div>
                        </p>
                        <input type="hidden" name="enabled" value="${hidden}" />
                        <p>
                            <button id="curateSubmit" name="submit" type="submit" class="btnText submit btn btn-primary btn-lg" value="submit">
                                <span>Submit</span>
                            </button>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    </tal:block>
</html>
